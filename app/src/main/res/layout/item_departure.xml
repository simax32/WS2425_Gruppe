<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- Erste Zeile: Abfahrtszeit größer und fett -->
    <TextView
        android:id="@+id/departureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:48 Uhr"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark" />

    <!-- Zweite Zeile: Zielort -->
    <TextView
        android:id="@+id/tripHeadsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uhingen Uditorium"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp" />

    <!-- Dritte Zeile: Ankunftszeit und Zusatzinfos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <!-- Zusatzinfos -->
        <TextView
            android:id="@+id/routeShortName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linie 911"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />
        <!-- Ankunftszeit -->
        <!-- Abstand -->
        <TextView
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/arrivalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ankunft 14:38 Uhr"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />


    </LinearLayout>

    <!-- Untere Linie als Trennlinie -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp" />
</LinearLayout>
